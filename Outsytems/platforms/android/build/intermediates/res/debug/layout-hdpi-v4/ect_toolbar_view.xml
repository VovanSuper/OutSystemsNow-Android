    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.85"
        android:minHeight="44dp"
        android:gravity="center_vertical|left"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ectFeedbackMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:background="@drawable/edit_text_roundedcorners"
            android:editable="true"
            android:enabled="true"
            android:hint="@string/feedback_message_prompt"
            android:inputType="textMultiLine"
            android:maxLength="500"
            android:maxLines="5"
            android:minLines="1"
            android:minHeight="32dp"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scrollHorizontally="false"
            android:scrollbars="vertical"
            android:visibility="visible"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/buttonPlayAudio"
            android:src="@drawable/icon_play_white"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:layout_marginBottom="0dp"/>

        <ImageButton
            android:id="@+id/buttonStopAudio"
            android:src="@drawable/icon_stop_white"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:layout_marginBottom="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.15"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buttonSend"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@android:color/transparent"
            android:text="@string/send_button"
            android:textSize="16sp"
            android:visibility="gone"
            android:textColor="@android:color/white"
            />


        <ImageButton
            android:id="@+id/buttonRecordAudio"
            android:src="@drawable/icon_microphone_roundedwhitebg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:layout_marginBottom="0dp"/>

    </LinearLayout>

